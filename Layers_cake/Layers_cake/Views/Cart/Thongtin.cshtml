

@{
    ViewBag.Title = "Thongtin";

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/Content/css/Thongtin.css" />
}

<body>
    <center>
        <div class="profile-container">
            <h1>Personal information</h1>

            <div class="info-group">
                <label for="name">Name:</label>
                <input type="text" id="name" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="address">Address:</label>
                <input type="text" id="address" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="birthday">Birthday:</label>
                <input type="text" id="birthday" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="gender">Gender:</label>
                <input type="text" id="gender" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="gmail">Email:</label>
                <input type="email" id="gmail" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="username">Username:</label>
                <input type="text" id="username" class="info-value" value="" readonly>
            </div>

            <div class="info-group">
                <label for="password">Password:</label>
                <input type="password" id="password" class="info-value" value="" readonly>
            </div>

            <div class="button-group">
                <a href="#" class="edit-button" onclick="enableEditing()">Edit</a>
                <a href="#" class="save-button" onclick="saveChanges()">Save</a>
                <a href="#" class="back-button" onclick="goBack()">Back</a>
            </div>
        </div>

        <script>
            function enableEditing() {
                var inputs = document.querySelectorAll('.info-value');
                inputs.forEach(function (input) {
                    input.removeAttribute('readonly');
                });
            }

            function saveChanges() {
                var inputs = document.querySelectorAll('.info-value');
                inputs.forEach(function (input) {
                    input.setAttribute('readonly', true);
                });
            }

            function goBack() {
                window.history.back();
            }
        </script>
    </center>
</body>



